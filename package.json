{
  "name": "11ty-base-template",
  "version": "1.0.0",
  "description": "A modern base template built with Eleventy and ES modules",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && ELEVENTY_ENV=production eleventy && npm run format:dist",
    "serve": "npm run clean && ELEVENTY_ENV=production eleventy --serve",
    "start": "npm run clean && ELEVENTY_ENV=development eleventy --serve",
    "dev": "npm run clean && ELEVENTY_ENV=development eleventy --serve --watch",
    "format:src": "prettier --write \"src/**/*.{js,json,njk,md,css}\" \"*.js\"",
    "format:dist": "prettier --write --ignore-path /dev/null \"dist/**/*.{html,css,js}\"",
    "format": "npm run format:src",
    "format:all": "npm run format:src && npm run format:dist",
    "format:check": "prettier --check \"src/**/*.{js,json,njk,md,css}\" \"*.js\""
  },
  "keywords": [
    "eleventy",
    "blog",
    "static-site",
    "es-modules"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "3.1.2",
    "build-hasher": "0.0.2",
    "dotenv": "17.2.2",
    "prettier": "3.7.4",
    "prettier-plugin-jinja-template": "^2.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
