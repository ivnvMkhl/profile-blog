{% from "./tag.njk" import tag %}

{% macro cardsGrid(items, baseUrl) %}
  <div class="cards-grid">
    {% for key, item in items %}
      <a class="card" href="{{ baseUrl }}{{ item.href }}">
        <div class="card-tags">
          {% for tagItem in item.tags %}
            {{ tag(tagItem.label, tagItem.color, "m") }}
          {% endfor %}
        </div>
        <h3 class="card-title">{{ item.name }}</h3>
        <p class="card-description">{{ item.description }}</p>
        <svg
          class="card-icon"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          aria-hidden="true"
        >
          <path
            fill-rule="evenodd"
            clip-rule="evenodd"
            d="M14.4289 6.84315L5.52944 6.84315L5.52944 4.84315H17.8431V17.1569L15.8431 17.1569L15.8431 8.25736L5.52944 18.5711L4.11522 17.1569L14.4289 6.84315Z"
            fill="currentColor"
          />
        </svg>
      </a>
    {% endfor %}
  </div>
{% endmacro %}
